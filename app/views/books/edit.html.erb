<%= render 'layouts/error_messages', book: @book %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "btn-block" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "btn-block" %>
				<div>
				<%= f.submit 'Update Book', class: "btn btn-info btn-block" %>
				</div>
				<div><%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %></div>
			<% end %>
		</div>
	</div>
</div>