<div class="container">
	<div class="row">
		<%= render 'layouts/sidebar', book: @booknew, user: @user %>
				<div class="col-xs-9">
			<div>
				<h1>Users</h1>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'50x50' %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', user_path(user.id) %></td><!-- (@book.user.id) -->
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>