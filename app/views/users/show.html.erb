<div class="container">
	<div class="row">
		<%= render 'layouts/sidebar', book: @book, user: @user %>
			<div class="col-xs-9">
				<div>
					<h1>Books</h1>
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'50x50' %></td>
								<td><%= link_to book.title,book_path(book.id) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
				</div>
		</div>
	</div>
</div>