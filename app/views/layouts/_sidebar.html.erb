<div class="col-xs-3">
	<h1>User info</h1>
	<div>
		<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
	</div>
	<table class="table">
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
	</table>
	<div><%= link_to edit_user_path(user.id), class: "btn btn-block btn-default" do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
	</div>

	<div>
		<h1>New book</h1>
		<%= form_for(book) do |f| %>
		<%= render 'layouts/error_messages', book: book %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "col-xs-12" %>
			<h4>Opinion</h4>
			<%= f.text_area :body, class: "col-xs-12" %>
			<div>
			<%= f.submit 'Create Book', class: "btn btn-block btn-primary" %>
			</div>
		<% end %>
	</div>
</div>